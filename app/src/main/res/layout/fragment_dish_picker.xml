<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_eorder_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kerk12.smartcityassistant.EOrderMainActivity"
    android:background="@color/whiteBcgr">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_dish_picker"
                android:layout_centerHorizontal="true"
                android:text="@string/label_dish_picker"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiteBcgr"
                android:layout_marginRight="10dp"
                android:id="@+id/dish_picker"
                android:layout_below="@+id/label_dish_picker"
                android:layout_centerHorizontal="true">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:id="@+id/dish_pick_button"
            android:text="@string/payment_method_choice"
            style="@style/ButtonGreen"
            android:textSize="25sp"
            android:enabled="false"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:id="@+id/cart_button"
            android:text="@string/cart"
            style="@style/ButtonGreen"
            android:textSize="25sp"
            android:enabled="false"/>
    </LinearLayout>


</LinearLayout>